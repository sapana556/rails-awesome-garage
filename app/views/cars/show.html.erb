<ul>
  <li><%= @car.brand %></li>
  <li><%= @car.model %></li>
  <li><%= @car.year %></li>
  <li><%= @car.fuel %></li>
</ul>

<% if @car.favourites.empty? %>
  <%= simple_form_for [@car, @favourite]  do |f| %>
  <%= f.submit "Add to your garage" %>
  <% end %>
<% else %>
  <p> This car is already in your garage!</p>
  <p><%= link_to "See your favourites", favourites_path %></p>
<% end %>

<hr>

<h1> New review </h1>
<%= simple_form_for [@car, @review] do |f| %>
  <%= f.input :comment %>
  <%= f.input :rating, collection: 1..5 %>
  <%= f.submit "Submit review"%>
<% end %>

<h2> Reviews </h2>
<% @car.reviews.each do |review| %>
<p><%= review.comment %></p>
<p> Rating: <%=  review.rating %></p>
<p>-----------------</p>
<% end %>

<%= link_to "Back to Homepage", cars_path %>
<%= link_to "See your favourites", favourites_path %>
